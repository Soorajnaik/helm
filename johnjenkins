pipeline {
    agent {label 'EKS-node'}

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/Soorajnaik/helm.git'
            }
        }
        stage('BuildingImage') {
            steps {
                sh """
                cd johnpapa
                docker build -t hellopage .
                docker tag hellopage soorajkumary/hellopage
		docker push soorajkumary/hellopage
            """
            }
        }
    }
}
